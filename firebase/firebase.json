{
    "hosting": {
        "public": "build",
        "rewrites": [
            {
                "source": "**",
                "destination": "/index.html"
            }
        ],
        "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
        "predeploy": ["sh ./predeploy.sh"]
    },
    "emulators": {
        "functions": {
            "port": "5001"
        },
        "firestore": {
            "port": "8080"
        },
        "hosting": {
            "port": "5000"
        },
        "ui": {
            "enabled": true,
            "port": 4000
        },
        "singleProjectMode": true,
        "pubsub": {
            "port": 8085
        }
    },
    "functions": {
        "predeploy": ["npm --prefix \"$RESOURCE_DIR\" run build"],
        "source": "functions"
    }
}
