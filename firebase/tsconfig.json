{
    "compilerOptions": {
        "target": "ES2020",
        "useDefineForClassFields": true,
        "lib": ["ES2020", "DOM", "DOM.Iterable"],
        "module": "ESNext",
        "skipLibCheck": true,

        "baseUrl": ".",
        "paths": {
            "@components/*": ["src/components/*"],
            "@constants/*": ["src/constants/*"],
            "@drawables/*": ["src/drawables/*"],
            "@utils/*": ["src/utilities/*"],
            "fizz-kidz": ["./functions/fizz-kidz/src"]
        },

        /* Bundler mode */
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",
        "allowJs": true,

        /* Linting */
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true
    },
    "include": ["src/", "functions/src/environment.d.ts", "functions/declarations/index.d.ts"],
    "exclude": ["src/utilities/trpc"],
    "references": [{ "path": "./tsconfig.node.json" }, { "path": "./functions" }]
}
