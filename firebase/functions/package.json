{
    "name": "functions",
    "private": true,
    "description": "Cloud Functions for Firebase",
    "main": "lib/src/index.js",
    "scripts": {
        "build": "npm --prefix fizz-kidz run build && npm run lint && tsc && npm run copy-files",
        "build:watch": "concurrently \"npm --prefix fizz-kidz run build:watch\" \"npm run copy-files\" \"tsc --watch\"",
        "copy-files": "copyfiles -u 1 src/**/*.html src/**/*.mjml lib/src && copyfiles -u 1 credentials/**/*.json lib/credentials",
        "deploy": "firebase deploy --only functions",
        "lint": "tslint -p tsconfig.json src/**/*.ts -e tests/**/*.ts",
        "logs": "firebase functions:log",
        "serve": "concurrently \"npm run build:watch\" \"firebase emulators:start --only functions,pubsub --inspect-functions\"",
        "shell": "firebase functions:shell",
        "start": "npm run shell",
        "test": "mocha",
        "test:coverage": "nyc --reporter=lcov mocha"
    },
    "dependencies": {
        "@google-cloud/pubsub": "^3.7.1",
        "@hubspot/api-client": "^9.0.0",
        "@sendgrid/mail": "^7.7.0",
        "acuityscheduling": "^0.1.9",
        "firebase-admin": "^11.11.0",
        "firebase-functions": "^4.4.1",
        "fizz-kidz": "file:fizz-kidz",
        "googleapis": "^105.0.0",
        "luxon": "^2.4.0",
        "mjml": "^4.12.0",
        "mustache": "^4.2.0",
        "stripe": "^10.17.0",
        "xero-node": "^4.34.0"
    },
    "devDependencies": {
        "@types/express": "^4.17.6",
        "@types/firebase": "^3.2.1",
        "@types/luxon": "^2.3.2",
        "@types/mjml": "^4.7.0",
        "@types/mocha": "^10.0.1",
        "@types/mustache": "^4.2.2",
        "@types/node": "^18.16.0",
        "@types/request": "^2.48.8",
        "@types/stripe": "^7.13.23",
        "concurrently": "^8.2.1",
        "copyfiles": "^2.4.1",
        "csv-parse": "^5.3.0",
        "firebase-functions-test": "^0.1.7",
        "mocha": "^10.2.0",
        "nyc": "^15.1.0",
        "ts-node": "^10.9.1",
        "tslint": "^6.1.2",
        "typescript": "^5.0.4"
    },
    "engines": {
        "node": "18"
    }
}
