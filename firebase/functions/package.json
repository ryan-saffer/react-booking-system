{
    "name": "functions",
    "description": "Cloud Functions for Firebase",
    "scripts": {
        "build": "npm --prefix fizz-kidz run build && tslint --project tsconfig.json && npm run copy-files && tsc",
        "build:watch": "npm --prefix fizz-kidz run build:watch & tslint --project tsconfig.json && npm run copy-files & tsc --watch",
        "copy-files": "copyfiles -u 1 src/**/*.html lib/src && copyfiles -u 1 src/**/*.csv lib/src && copyfiles -u 1 credentials/**/*.json lib/credentials",
        "serve": "npm run build:watch & firebase emulators:start --only functions --inspect-functions",
        "shell": "firebase functions:shell",
        "start": "npm run shell",
        "deploy": "firebase deploy --only functions",
        "logs": "firebase functions:log",
        "lint": "tslint -p tsconfig.json src/**/*.ts -e tests/**/*.ts",
        "test": "mocha",
        "test:coverage": "nyc --reporter=lcov mocha"
    },
    "engines": {
        "node": "18"
    },
    "dependencies": {
        "@sendgrid/mail": "^7.7.0",
        "@types/express": "^4.17.6",
        "@types/firebase": "^3.2.1",
        "@types/stripe": "^7.13.23",
        "acuityscheduling": "^0.1.9",
        "copyfiles": "^2.4.1",
        "firebase-admin": "^8.13.0",
        "firebase-functions": "^3.24.1",
        "fizz-kidz": "file:fizz-kidz",
        "googleapis": "^105.0.0",
        "luxon": "^2.4.0",
        "mjml": "^4.12.0",
        "mustache": "^4.2.0",
        "stripe": "^10.17.0",
        "tslint": "^6.1.2",
        "xero-node": "^4.34.0"
    },
    "devDependencies": {
        "@types/luxon": "^2.3.2",
        "@types/mjml": "^4.7.0",
        "@types/mocha": "^10.0.1",
        "@types/mustache": "^4.2.2",
        "@types/request": "^2.48.8",
        "csv-parse": "^5.3.0",
        "firebase-functions-test": "^0.1.7",
        "mocha": "^10.2.0",
        "nyc": "^15.1.0",
        "ts-node": "^10.9.1",
        "typescript": "^5.0.4"
    },
    "main": "lib/src/index.js",
    "private": true
}
