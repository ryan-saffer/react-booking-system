{
    "compilerOptions": {
        "baseUrl": "./",
        "rootDir": "src",
        "module": "commonjs",
        "noImplicitReturns": false,
        "noUnusedLocals": true,
        "outDir": "lib-tsc",
        "sourceMap": true,
        "strict": true,
        "target": "es2020",
        "allowJs": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "paths": {
            "fizz-kidz": ["./fizz-kidz/src"]
        },
        // "noEmit": false,
        "composite": true
    },
    "compileOnSave": true,
    "include": ["src", "src/environment.d.ts", "declarations/index.d.ts", "credentials"],
    "references": [{ "path": "fizz-kidz" }]
}
