{
    "compilerOptions": {
        "target": "es5",
        "module": "ES2022",
        "moduleResolution": "Bundler",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "lib": ["es6", "es2015"],
        "types": ["node"],
        "declaration": true,
        "outDir": "lib",
        // "rootDir": "src",
        "strict": true,
        "skipLibCheck": true,
        "noErrorTruncation": true,
        "composite": true
    },
    "exclude": ["lib", "node_modules", "src/**/*.spec.ts"],
    "include": ["src"]
}
